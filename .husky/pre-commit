#!/bin/sh
. "$(dirname "$0")/_/husky.sh"

echo "ğŸ” Running pre-commit checks..."

# Run status check
npm run status

# Run cleanup
npm run cleanup

# Run tests and linting
npm run verify

# Update AI context
npm run ai:save

# Add the updated context files to the commit
git add docs/LAST_SESSION.md

# Check for sensitive files
if git diff --cached --name-only | grep -E '\.env$|\.pem$|\.key$|secret|password'; then
  echo "âŒ Attempting to commit sensitive files. Please remove them."
  exit 1
fi

echo "âœ… Pre-commit checks passed"
